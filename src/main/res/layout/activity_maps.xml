<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"/>

    <RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/BusesMenu"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <SearchView
            android:id="@+id/BusesSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:allowClickWhenDisabled="false"
            android:queryHint="Enter Bus Route (e.g. 989)"
            android:iconifiedByDefault="false"
            android:inputType="number" />
        <Button
            android:id="@+id/BusesExit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="x" />
    </RelativeLayout>

    <RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/RoutesMenu"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <SearchView
            android:id="@+id/RoutesSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:allowClickWhenDisabled="false"
            android:queryHint="Enter Bus Route (e.g. 989)"
            android:iconifiedByDefault="false"
            android:inputType="number" />
        <Button
            android:id="@+id/RoutesExit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="x" />
    </RelativeLayout>

    <RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:id="@+id/SettingsMenu"
        android:orientation="vertical"
        android:visibility="invisible"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:id="@+id/SettingsExit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="x" />
        <ToggleButton
            android:id="@+id/setting1"
            android:onClick="settingsButtonClicked"
            android:layout_marginTop="50dp"
            android:textOff="Setting 1: OFF"
            android:textOn="Setting 1: ON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ToggleButton
            android:id="@+id/setting2"
            android:onClick="settingsButtonClicked"
            android:layout_marginTop="100dp"
            android:textOff="Setting 2: OFF"
            android:textOn="Setting 2: ON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ToggleButton
            android:id="@+id/setting3"
            android:onClick="settingsButtonClicked"
            android:layout_marginTop="150dp"
            android:textOff="Setting 3: OFF"
            android:textOn="Setting 3: ON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/zoomout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#359c5e"
        android:text="Zoom Out"
        android:textColor="#ffffff"
        android:visibility="visible"
        tools:layout_editor_absoluteX="299dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    </RelativeLayout>
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:queryHint="Search for a destination, resources, etc"
        android:iconifiedByDefault="false"
        android:layout_alignParentTop="true"
        android:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>